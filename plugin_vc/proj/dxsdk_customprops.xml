<?xml version="1.0" encoding="utf-8"?>
<ProjectSchemaDefinitions  xmlns="http://schemas.microsoft.com/build/2009/properties"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:sys="clr-namespace:System;assembly=mscorlib">
  <Rule Name="psdkvc_dxconfig" PageTemplate="generic">
    <Rule.DisplayName>
      <sys:String>plugin-sdk Configuration</sys:String>
    </Rule.DisplayName>
    <Rule.Categories>
      <Category Name="psdkvc_dxsdk">
        <Category.DisplayName>
          <sys:String>Direct3D8 SDK</sys:String>
        </Category.DisplayName>
      </Category>
    </Rule.Categories>
    <Rule.DataSource>
      <DataSource Persistence="UserFile" ItemType="" />
    </Rule.DataSource>
    <StringProperty Name="PSDKVC_DXSDK_DIR" Category="psdkvc_dxsdk" IsRequired="true" Subtype="folder">
      <StringProperty.DisplayName>
        <sys:String>SDK Path</sys:String>
      </StringProperty.DisplayName>
      <StringProperty.Description>
        <sys:String>Set the path to your Direct3D 8 SDK here (search for DX81SDK_FULL.EXE)</sys:String>
      </StringProperty.Description>
    </StringProperty>
  </Rule>
</ProjectSchemaDefinitions>